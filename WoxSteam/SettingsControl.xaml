<UserControl x:Class="WoxSteam.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WoxSteam"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label x:Name="label" Content="Path to steam" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SteamPathText" Height="23" Margin="92,12,48,0" TextWrapping="Wrap" Text="C:\Something" VerticalAlignment="Top" TextChanged="SteamPathText_TextChanged"/>
        <Button x:Name="PickPath" Content="..." HorizontalAlignment="Right" Margin="0,12,10,0" VerticalAlignment="Top" Width="33" Height="23" Click="PickPath_Click"/>

    </Grid>
</UserControl>
